@model AdminProfileDTO
@{
    ViewData["Title"] = "MyProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h4>My Profile</h4>

        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-outline-info"> < Back </a>
    </div>

    <div class="bg">
        <h4 class="mb-4">Account Information</h4>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="UserName"
                           class="form-control "
                           id="username"
                           placeholder="username"
                           readonly />
                    <label for="floatingPassword">User Name</label>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="Password"
                           class="form-control"
                           id="password"
                           placeholder="password" />
                    <label for="password">Password</label>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <select class="form-select professionDropdown valid" id="status" disabled>
                        <option>Active</option>
                    </select>
                    <label for="status" class="form-label">Status</label>
                </div>
                <span class="text-danger field-validation-valid" data-valmsg-for="Profession" data-valmsg-replace="true"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <select class="form-select professionDropdown valid" id="role" disabled>
                        <option>Master Admin</option>
                    </select>
                    <label for="role" class="form-label">Status</label>
                </div>
                <span class="text-danger field-validation-valid" data-valmsg-for="Profession" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-auto">
                <a class="btn btn-outline-info"> Reset Password </a>
            </div>
        </div>

        <h4 class="mb-4">Administrator Information</h4>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="FirstName"
                           class="form-control"
                           id="firstname"
                           placeholder="firstname"
                           disabled />
                    <label for="firstname">First Name</label>
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="LastName"
                           class="form-control"
                           id="lastname"
                           placeholder="lastname"
                           disabled />
                    <label for="firstname">Last Name</label>
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="Email"
                           class="form-control"
                           id="email"
                           placeholder="email"
                           disabled />
                    <label for="firstname">Email</label>
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="ConfirmEmail"
                           class="form-control"
                           id="confirmEmail"
                           placeholder="confirm email"
                           disabled />
                    <label for="confirmEmail">Confirm Email</label>
                </div>
                <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="tel"
                    asp-for="PhoneNumber"
                           class="form-control dis-field"
                           id="phone"
                           placeholder=""
                           style="height: 58px"
                           disabled />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


            </div>


        </div>

        <div class="row justify-content-end">
            <div class="col-auto">
                <button type="button" class="btn btn-info text-white btn-edit"> Edit </button>
                <button type="button" class="btn btn-info text-white btn-save" id="saveBtn">Save</button>
            </div>
        </div>

        <h4 class="mb-4">Mailing & Billing Information</h4>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="Address1"
                           class="form-control "
                           id="address1"
                           placeholder="address"
                           readonly />
                    <label for="address1">Address 1</label>
                </div>
                <span asp-validation-for="Address1" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="Address2"
                           class="form-control "
                           id="address2"
                           placeholder="address"
                           readonly />
                    <label for="address2">Address 2</label>
                </div>
                <span asp-validation-for="Address2" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="City"
                           class="form-control"
                           id="city"
                           placeholder="city"
                           readonly />
                    <label for="city">City</label>
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="State"
                           class="form-control "
                           id="state"
                           placeholder="state"
                           readonly />
                    <label for="state">State</label>
                </div>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="text"
                    asp-for="Zip"
                           class="form-control"
                           id="zip"
                           placeholder="zip"
                           readonly />
                    <label for="address1">Zip</label>
                </div>
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <div class="form-floating">
                    <input type="tel"
                    asp-for="AltPhoneNumber"
                           class="form-control dis-field"
                           id="phone1"
                           placeholder=""
                           style="height: 58px"
                           disabled />
                    <span asp-validation-for="AltPhoneNumber" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-auto">
                <button type="button" class="btn btn-info text-white btn-edit2"> Edit </button>
                <button type="button" class="btn btn-info text-white btn-save2" id="saveBtn">Save</button>
            </div>
        </div>
    </div>
</div>