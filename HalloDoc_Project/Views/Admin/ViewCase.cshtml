@model ViewCaseDTO
@{
    ViewData["Title"] = "ViewCase";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@section style{
    <link rel="stylesheet" href="~/css/view_case.css" asp-append-version="true" />
}


<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h4>New Request</h4>

        <a asp-controller="Admin" asp-action="AdminDashboard" class="btn btn-outline-info text-info"> < Back </a>
    </div>

    <div class="bg mt-2 mb-3">
        <form asp-action="ViewCase" class="login-form-control">
            <div class="row">
                <h4 class="mb-4">Patient Information</h4>

                <span class="mb-3">Confirmation Number <h3 class="text-info">@Model.ConfirmationNumber</h3> </span>
                <div class="mb-3">
                    <div class="form-floating">
                        <textarea 
                            asp-for="PatientNotes"
                                  class="form-control dis-field"
                                  placeholder="notes"
                                  id="floatingTextarea2"
                                  disabled
                                  style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Patient Notes</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="text"
                        asp-for="FirstName"
                               class="form-control dis-field"
                               id="floatingInput"
                               placeholder="First name"
                               disabled />
                        <label for="floatingPassword">First Name</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="text"
                        asp-for="LastName"
                               class="form-control dis-field"
                               id="floatingInput"
                               placeholder="Last name"
                               disabled />
                        <label for="floatingPassword">Last Name</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="date"
                        asp-for="DateOfBirth"
                               class="form-control dis-field"
                               id="dob"
                               disabled />
                        <label for="floatingPassword">Date of Birth</label>
                    </div>
                </div>


                <div class="col-md-5 col-sm-10 mb-3 z-3 form-floating">
                    <input type="tel"
                    asp-for="PhoneNumber"
                           class="form-control dis-field"
                           id="phone"
                           placeholder=""
                           style="height: 58px"
                           disabled />
                </div>

                <div class="col-md-1 col-sm-2 mb-3">
                    <div class="form-floating">
                        <a class="btn btn-outline-info icon dis-field"><i class="bi bi-telephone-fill"></i> </a>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="email"
                        asp-for="Email"
                               class="form-control dis-field"
                               id="email"
                               placeholder="name@example.com" 
                               disabled/>
                        <label for="floatingInput">Email</label>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <button type="button" class="btn btn-outline-info text-info btn-edit"> Edit </button>
                    <button class="btn btn-info text-white btn-save">Save</button>
                </div>

                <h4 class="mb-4 mt-4">Location Information</h4>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="text"
                        asp-for="Region"
                               class="form-control"
                               id="floatingInput"
                               placeholder="region"
                               disabled />
                        <label for="floatingInput">Region</label>
                    </div>
                </div>

                <div class="col-md-5 mb-3 col-sm-10 form-floating">
                    <div class="form-floating">
                        <input type="text"
                        asp-for="BusinessName"
                               class="form-control"
                               id="floatingInput"
                               placeholder="business name"
                               disabled />
                        <label for="floatingInput">Business Name/Address</label>
                    </div>
                </div>

                <div class="col-md-1 col-sm-2 mb-3">
                    <div class="form-floating">
                        <a class="btn btn-outline-info icon"><i class="bi bi-geo-alt"></i> </a>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input type="text"
                        asp-for="Room"
                               class="form-control"
                               id="floatingInput"
                               placeholder="room"
                               disabled />
                        <label for="floatingInput">Room #</label>
                    </div>
                </div>

            </div>
            <div class="row justify-content-end">
                <div class="col-auto">
                    <button type="button" class="btn btn-info text-white"> Assign </button>
                    <button type="button" class="btn btn-info text-white"> View Notes </button>
                    <button type="button" class="btn btn-danger text-white"> Cancel </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
