@{
    ViewData["Title"] = "Provider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string active = "#providers";
}


<div class="container">
    <div class="d-flex align-items-center mt-4 mb-4">
        <h4>Provider Information</h4>
    </div>

    <div class="bg-white rounded shadow p-2">
        <div class="row justify-content-between align-items-center">
            <div class="col-md-4">
                <select class="form-select" id="regionsearch">
                    <option>All</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="col-auto">
                <button class="btn btn-info text-white rounded-2 border-0 me-2"> Create Provider Account </button>
            </div>
        </div>
    </div>


    <div class="d-lg-block d-none ps-0 pe-0">
        <table class="table">
            <thead>
                <tr class="table-secondary bg-body-tertiary">
                    <th class="ps-3 text-center me-4" style="width:150px;">
                        Stop Notification
                    </th>
                    <th>
                        Provider Name <i class="bi bi-arrow-up"></i>
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Role) *@
                    </th>
                    <th>
                        On Call Status
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Status) *@
                    </th>

                    <th class="text-center">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3 text-center me-4" style="width:150px;">
                            @* <input class="form-check-input change" type="checkbox" asp-for="@item.Notification" value="changenotify-@item.physicianid"> *@
                        </td>

                        <td>
                            @item.Name
                        </td>
                        <td>
                            @if (string.IsNullOrEmpty(item.Role))
                            {
                                <span>Role Unavailable</span>
                            }
                            else
                            {
                                item.Role.ToString();
                            }
                        </td>
                        <td>
                            @item.OnCallStatus
                        </td>
                        <td>
                            @item.Status
                        </td>
                        <td class="text-center">
                            <button class="btn btn-outline-info" onclick="SendMessagePop(@item.PhysicianId)">Contact</button>
                            <button class="btn btn-outline-info">Edit</button>
                            <a id="changenotify-@item.physicianid" onclick="ChangeNotficationState(@item.PhysicianId)" class="btn btn-outline-info px-4" style="display:none;">Save</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<partial name="_ActiveTabPartial" model=active />

