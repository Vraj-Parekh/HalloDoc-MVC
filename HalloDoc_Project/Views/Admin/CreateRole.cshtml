@model CreateRoleDTO
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string active = "#access";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
        <h4>Create Role</h4>

        <a class="btn btn-outline-info bg-white text-info" onclick="history.back()"> &lt; Back </a>
    </div>

    <div class="bg-white rounded shadow p-3">
        <h5>Details</h5>
        <div class="row justify-content-between">
            <div class="col-lg-6 mt-2">
                <div class="form-floating">
                    <input type="text" class="form-control" id="roleName" placeholder="Role Name" required asp-for="RoleName">
                    <label for="firstname">Role Name</label>
                    <span class="text-danger" id="roleNameError" asp-validation-for="RoleName"></span>
                </div>
            </div>
            <div class="col-lg-6 mt-2">
                <div class="form-floating">
                    <select class="form-select" id="accountType">
                        <option value="1">All</option>
                        <option value="2">Admin</option>
                        <option value="3">Physician</option>
                        <option value="4">Patient</option>
                    </select>
                    <label for="accountType" class="form-label">Account Type</label>
                </div>
            </div>
        </div>

        <span class="row row-cols-lg-5 row-cols-sm-3 row-cols-2 mt-2" id="checkboxContainer"></span>

        <div class="row justify-content-end mt-4">
            <div class="col-auto">
                <button type="button" id="submit-btn" class="btn btn-info text-white"> Save </button>
                <button type="button" class="btn btn-outline-info text-info bg-white"> Cancel </button>
            </div>
        </div>
    </div>
</div>

<partial name="_ActiveTabPartial" model=active />
<script src="~/js/CreateRole.js" asp-append-version="true"></script>
