<div class="modal fade" id="sendLinkModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content">            <div class="modal-header bg-info text-white">                <h1 class="modal-title fs-5" id="exampleModalLabel">Send mail to patient for submitting request </h1>                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>            </div>            <form id="Sendlinkform" method="post">                <div class="modal-body">                    <div class="form-floating mb-3 mt-2">                        <input type="text" class="form-control" id="Firstname" placeholder="Password" onkeyup="checkfirstname()">                        <label for="Firstname">First Name</label>                        <span id="Firstname_validation" class="text-danger"></span>                    </div>                    <div class="form-floating mb-3 mt-2">                        <input type="text" class="form-control" id="Lastname" placeholder="Password" onkeyup="checklastname()">                        <label for="Lastname">Last Name</label>                        <span id="Lastname_validation" class="text-danger"></span>                    </div>                    <div class="mb-3">                        <div class="form-floating mt-2 form-control pt-3 pb-3" id="tel1" style="position: relative;">                            <input type="tel" class="tel w-100 phone_date" id="phone" placeholder="(201) 555-0123" style="border:none;" />                        </div>                        <span id="Phonenumber_validation" class="text-danger"></span>                    </div>                    <div class="form-floating mb-3">                        <input type="email" class="form-control" id="Email" mailto:placeholder="name@example.com" onkeyup="checkemail()">                        <label for="floatingInput">Email</label>                        <span id="Email_validation" class="text-danger"></span>                    </div>                </div>                <div class="modal-footer">                    <input type="submit" class="btn btn-info text-white px-3 py-2" value="Send" onclick="return sendlinked()">                    <button type="button" class="btn btn-outline-info px-3 py-2" data-bs-dismiss="modal">Cancel</button>                </div>            </form>        </div>    </div></div><script>    $(document).ready(function () {        // Handle button click event        $("#sendLink").click(function () {            // Show the modal            $('#sendLinkModal').modal('show');        });    });</script>