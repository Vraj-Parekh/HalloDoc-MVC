@model ConciergeRequestDTO
@{
    ViewData["Title"] = "Concierge Information";
}
@section style {
    <link rel="stylesheet" href="~/css/info.css" asp-append-version="true" />
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />

<div class="container">

    <div class="d-flex justify-content-end">
        <a asp-action="SubmitRequest" asp-controller="Request">
            <button type="button" class="btn btn-outline-info mt-4" id="back_btn">
                < Back
            </button>
        </a>
    </div>

    <div class="bg mt-2 mb-3">
        <form asp-action="ConciergeInfo" class="login-form-control">

            <div class="row">
                <h4 class="mb-4">Concierge Information</h4>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="FirstName" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">Your First Name</label>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="LastName" type="text"
                               class="form-control"
                               id="floatingPassword"
                               placeholder="last name" />
                        <label for="floatingPassword">Your Last Name</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3 z-3">
                    <input asp-for="Phone" type="tel"
                           class="form-control"
                           id="phone"
                           placeholder=""
                           style="height: 58px" />
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" type="email"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">Your Email</label>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="HotelName" type="text"
                               class="form-control"
                               id="hotel"
                               placeholder="hotel name" />
                        <label for="floatingPassword">Hotel/Property Name</label>
                    </div>
                </div>

                <h4 class="mb-4 mt-4">Concierge Location</h4>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Street" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">Street</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="City" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">City</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="State" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">State</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="ZipCode" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">Zip code</label>
                    </div>
                </div>

                <h4 class="mb-4 mt-4">Patient Information</h4>

                <div class="mb-3">
                    <div class="form-floating">
                        <textarea asp-for="Symptoms" class="form-control"
                                  placeholder=" "
                                  id="floatingTextarea2"
                                  style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Enter Brief Details of Symptoms (Optional)</label>
                    </div>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PatientFirstName" type="text"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">First Name</label>
                    </div>
                    <span asp-validation-for="PatientFirstName" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PatientLastName" type="text"
                               class="form-control"
                               id="floatingPassword"
                               placeholder="last name" />
                        <label for="floatingPassword">Last Name</label>
                    </div>
                    <span asp-validation-for="PatientLastName" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="DateOfBirth" type="date"
                               class="form-control"
                               id="dob"
                               placeholder="date of birth" />
                        <label for="floatingPassword">Date of Birth</label>
                    </div>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                </div>

                <h4 class="mb-4 mt-4">Patient Contact Information</h4>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="PatientEmail" type="email"
                               class="form-control"
                               id="floatingInput"
                               placeholder="name@example.com" />
                        <label for="floatingInput">Email</label>
                    </div>
                    <span asp-validation-for="PatientEmail" class="text-danger"></span>

                </div>

                <div class="col-md-6 mb-3 z-3">
                    <input asp-for="PatientPhone" type="tel"
                           class="form-control"
                           id="phone1"
                           placeholder=""
                           style="height: 58px" />
                </div>

                <h4 class="mb-4 mt-4">Patient Location</h4>

                <div class="col-md-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="RoomOrSuite" type="text" class="form-control" id="" placeholder=" " />
                        <label for="floatingPassword">Room # / Suite (Optional)</label>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button class="btn btn-info me-3 text-light">
                    Submit
                </button>
                <button class="btn btn-outline-info">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<script>