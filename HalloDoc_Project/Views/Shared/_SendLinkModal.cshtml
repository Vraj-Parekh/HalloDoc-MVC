@model SendLinkDTO<div class="modal fade" id="sendLinkModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content">            <div class="modal-header bg-info text-white">                <h1 class="modal-title fs-5" id="exampleModalLabel">Send mail to patient for submitting request </h1>                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>            </div>            <form asp-action="SendLink" id="Sendlinkform" method="post">                <div class="modal-body">                    <div class="form-floating mb-3 mt-2">                        <input type="text" class="form-control" id="Firstname" asp-for="Firstname">                        <label for="Firstname">First Name</label>                        <span asp-validation-for="Firstname" class="text-danger"></span>                    </div>                    <div class="form-floating mb-3 mt-2">                        <input type="text" class="form-control" id="Lastname" asp-for="Lastname">                        <label for="Lastname">Last Name</label>                        <span asp-validation-for="Lastname" class="text-danger"></span>                    </div>                    <div class="mb-3">                        <div class="form-floating mt-2 form-control pt-3 pb-3">                            <input type="tel" asp-for="Phonenumber" class="form-control" placeholder="" style="height: 58px"  />                            <span asp-validation-for="Phonenumber" class="text-danger"></span>                        </div>                        <span id="Phonenumber_validation" class="text-danger"></span>                    </div>                    <div class="form-floating mb-3">                        <input type="email" class="form-control" id="Email" asp-for="Email">                        <label for="floatingInput">Email</label>                        <span asp-validation-for="Email" class="text-danger"></span>                    </div>                </div>                <div class="modal-footer">                    <button type="submit" class="btn btn-info text-white px-3 py-2">Send</button>                    <button type="button" class="btn btn-outline-info px-3 py-2" data-bs-dismiss="modal">Cancel</button>                </div>            </form>        </div>    </div></div><script>    $(document).ready(function () {        // Handle button click event        $("#sendLink").click(function () {            // Show the modal            $('#sendLinkModal').modal('show');        });    });</script>