<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HalloDoc_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.css" />
    <link href="~/css/header_footer_layout.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    @await RenderSectionAsync("style", required: false)
</head>
<body>
    <header>
        <div class="d-flex header_nav justify-content-between align-items-center bg-white p-3">

            <button class="btn text-info bg-white d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample" style="border: 1px solid cyan;">
                <i class="bi bi-list fs-5"></i>
            </button>

            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel" style="width:320px;">
                <div class="offcanvas-header d-flex justify-content-between">
                    <button class="btn text-info bg-white d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasExample" aria-controls="offcanvasExample" style="border: 1px solid cyan;">
                        <i class="bi bi-list fs-5"></i>
                    </button>
                    <img src="/img/hallodoc_img.png" alt="logo_img">
                </div>

                <div class="offcanvas-body aside-cont">
                    <span class="fw-light fs-5">Welcome</span><span class="h5 ps-1">@User.FindFirst("firstname")?.Value,@User.FindFirst("lastname")?.Value</span>

                    <ul class="nav flex-column mt-2">
                        <li class="nav-item">
                            <a class="nav-link active fs-5" asp-action="PatientDashboard" asp-controller="Patient">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  fs-5" asp-action="Profile" asp-controller="Patient">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>

            <img src="/img/hallodoc_img.png" class="d-lg-block d-none" alt="logo_img">
            <div class="d-flex align-items-center">
                <span class="fw-light fs-5 d-lg-block d-none">Welcome<span class="h5 ps-1">@User.FindFirst("firstname")?.Value, @User.FindFirst("lastname")?.Value</span> </span>
                <a class="btn btn-outline-info text-info bg-white ms-2 me-2" role="button" asp-action="Logout">
                    <i class="bi bi-box-arrow-right d-lg-none"></i>
                    <span class="d-lg-block d-none"> Logout</span>
                </a>
                <button type="button" class="btn btn-outline-info bg-white" id="toggle_theme_btn">
                    <i class="bi bi-moon"></i>
                </button>
            </div>

        </div>
    </header>

    @RenderBody()

    <footer>
        <div class="footer d-flex justify-content-end align-items-center gap-2 pe-2">
            <a href="#">Terms and condition</a>
            |
            <a href="#">Privacy policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/intel_input.js" asp-append-version="true"></script>
    <script src="~/js/toggle_btn.js" asp-append-version="true"></script>
    <script src="~/js/datetime.js" asp-append-version="true"></script>
    <script src="~/js/multi_files.js" asp-append-version="true"></script>
    <script src="~/js/check_mail.js" asp-append-version="true"></script>
    <partial name="_ValidationScriptsPartial" />

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
