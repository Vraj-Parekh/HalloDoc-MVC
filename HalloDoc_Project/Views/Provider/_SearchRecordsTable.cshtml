@model List<SearchRecordsDTO>
@using Entities.Enum;

<table class="table mt-3">
    <thead class="table-light">
        <tr>
            <th class="col">
                Patient Name
            </th>
            <th class="col text-center">
                Requestor
            </th>
            <th class="col text-center">
                Date Of Service
            </th>
            <th class="col text-center">
                Close Case Date
            </th>
            <th class="col text-center">
                Email
            </th>
            <th class="col text-center">
                Phone Number
            </th>
            <th class="col text-center">
                Address
            </th>
            <th class="col text-center">
                Zip
            </th>
            <th class="col text-center">
                Request Status
            </th>
            <th class="col text-center">
                Physician
            </th>
            <th class="col text-center">
                Physician Note
            </th>
            <th class="col text-center">
                Cancelled By Provider Note
            </th>
            <th class="col text-center">
                Admin Note
            </th>
            <th class="col text-center">
                Patient Note
            </th>
            <th class="col text-center">
                Delete Permanently
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.PatientName
                </td>
                <td class="text-center">
                    @((RequestTypeId)item.Requestor)
                </td>
                <td class="text-center">
                    @item.DateofService
                </td>
                <td class="text-center">
                    @item.CloseCaseDate
                </td>
                <td class="text-center">
                    @item.Email
                </td>
                <td class="text-center">
                    @item.PhoneNumber
                </td>
                <td class="text-center">
                    @item.Address
                </td>
                <td class="text-center">
                    @item.Zip
                </td>
                <td class="text-center">
                    @((RequestStatus)item.RequestStatus)
                </td>
                <td class="text-center">
                    @item.Physician
                </td>
                <td class="text-center">
                    @item.PhysicianNote
                </td>
                <td class="text-center">
                    @item.CancelledByProviderNote
                </td>
                <td class="text-center">
                    @item.AdminNote
                </td>
                <td class="text-center">
                    @item.PatientNote
                </td>
                <td class="text-center">
                    <button class="btn btn-outline-info" data-bs-target="#deleteRoleModal_@item.RequestId" data-bs-toggle="modal" data-item-id="@item.RequestId">Delete</button>

                    <div class="modal fade" id="deleteRoleModal_@item.RequestId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class=" p-2 py-3 modal-content text-center justify-content-center">
                                <div class="modal-body px-5 pt-5 text-center">
                                    <form method="post" asp-action="DeletePatientRecord" asp-controller="Provider" asp-route-requestId="@item.RequestId">
                                        <div class="warning_icon" style="color:#f7ad00;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="85" height="85" fill="currentColor" class="bi bi-exclamation-circle-fill war-i" viewBox="0 0 16 16">
                                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2"></path>
                                            </svg>
                                        </div>
                                        <h4 class="text-center pt-3">Confirmation for Deleting the Patient Record</h4>
                                        <p class="text-center fs-7 pt-2 text-secondary">
                                            Are sure you want to delete this record ? Once delete this record then you are not able to see this record
                                        </p>
                                        <button type="submit" class="mb-3 btn btn-info text-white" data-bs-dismiss="modal">Delete</button>
                                        <button type="button" class="mb-3 btn border border-info text-info ms-2" data-bs-dismiss="modal">Cancel</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>