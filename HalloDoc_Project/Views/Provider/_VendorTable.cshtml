@model Pagination<VendorsDTO>

<table class="table mt-3">
    <thead class="table-light">
        <tr>
            <th class="col">
                Profession
            </th>
            <th class="col text-center">
                Business Name
            </th>
            <th class="col text-center pe-5">
                Email
            </th>
            <th class="col text-center">
                Fax Number
            </th>
            <th class="col text-center">
                Phone Number
            </th>
            <th class="col text-center">
                Business Contact
            </th>
            <th class="col text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.Profession
                </td>
                <td class="text-center">
                    @item.BusinessName
                </td>
                <td class="text-center">
                    @item.Email
                </td>
                <td class="text-center">
                    @item.FaxNumber
                </td>
                <td class="text-center">
                    @item.PhoneNumber
                </td>
                <td class="text-center">
                    @item.BusinessContact
                </td>
                <td class="text-end">
                    <a class="btn btn-outline-info" asp-action="EditBusiness" asp-route-vendorId="@item.VendorId">Edit</a>
                    <a class="btn btn-outline-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@*Pagination code*@
<div class="pagination d-flex justify-content-center align-items-center">

    @if (Model.TotalPages != 0)
    {
        <ul class="mt-2 mb-2 ps-0">
            <!-- Previous button -->
            <li class="page-item">
                <a class="page-link" id="prevBtn" role="button" onclick="previousPage()">&laquo; Previous</a>
            </li>

            <!-- Page links -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" role="button" onclick="changePage(@i)">@i</a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item">
                <a class="page-link" role="button" onclick="nextPage(@Model.TotalPages)">Next &raquo;</a>
            </li>
        </ul>
    }
    else
    {
        <h3>No data found</h3>
    }
</div>