@model Pagination<PatientHistoryDTO>

<table class="table mt-3">
    <thead class="table-light">
        <tr>
            <th class="col">
                First Name
            </th>
            <th class="col text-center">
                Last Name
            </th>
            <th class="col text-center pe-5">
                Email
            </th>
            <th class="col text-center">
                Phone
            </th>
            <th class="col text-center">
                Address
            </th>
            <th class="col text-center">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td class="text-center">
                    @item.LastName
                </td>
                <td class="text-center">
                    @item.Email
                </td>
                <td class="text-center">
                    @item.PhoneNumber
                </td>
                <td class="text-center">
                    @item.Address
                </td>
                <td class="text-center">
                    <a class="btn btn-outline-info" asp-action="PatientRecords" asp-controller="Provider" asp-route-userId="@item.UserId">Explore</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@*Pagination code*@
<div class="pagination d-flex justify-content-center align-items-center">

    @if (Model.TotalPages != 0)
    {
        <ul class="mt-2 mb-2 ps-0">
            <!-- Previous button -->
            <li class="page-item">
                <a class="page-link" id="prevBtn" role="button" onclick="previousPage()">&laquo; Previous</a>
            </li>

            <!-- Page links -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" role="button" onclick="changePage(@i)">@i</a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item">
                <a class="page-link" role="button" onclick="nextPage(@Model.TotalPages)">Next &raquo;</a>
            </li>
        </ul>
    }
    else
    {
        <h3>No data found</h3>
    }
</div>