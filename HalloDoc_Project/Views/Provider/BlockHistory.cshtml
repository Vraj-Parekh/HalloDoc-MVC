
@{
    ViewData["Title"] = "BlockHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    string active = "#records";
}

<div class="ms-2 me-2">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mt-4 mb-4">
            <h4>Block History</h4>
        </div>

        <div class="bg-white rounded shadow p-3 mb-5">
            <div class="row align-items-center mb-3">
                <div class="col-lg-3">
                    <input type="text" placeholder="Name" class="form-control p-2 px-4 w-100" id="name" style="height:58px;">
                </div>
                <div class="col-lg-3">
                    <input type="date"
                           class="form-control text-secondary p-2 px-4 w-100"
                           id="createdDate"
                           style="height:58px;" />
                </div>
                <div class="col-lg-3">
                    <input type="text" placeholder="Email" class="form-control p-2 px-4 w-100" id="email" style="height:58px;">
                </div>
                <div class="col-lg-3">
                    <input type="text" placeholder="Phone Number" class="form-control p-2 px-4 w-100" id="phonenumber" style="height:58px;">
                </div>
            </div>

            <div class="row justify-content-end mt-4">
                <div class="col-auto">
                    <button class="btn btn-outline-info text-info bg-white" id="clearButton">Clear</button>
                    <button type="button" class="btn btn-info text-white" id="searchButton"> Search </button>
                </div>
            </div>

            <div id="blockHistroyTableDiv" class="table-responsive mt-3">
            </div>
        </div>
    </div>
</div>

<partial name="_ActiveTabPartial" model=active />
<script src="/js/BlockHistory.js" asp-append-version="true"></script>
