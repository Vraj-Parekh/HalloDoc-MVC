@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
@section style{
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />
}

<div class="row">

    <div class="d-flex justify-content-center">

        <div class="col-md-6 ">
            <a asp-action="SubmitRequest" asp-controller="Request" class="btn c-btn btn1 btn-info w-100 mb-4 text-white">
                Submit A Request
            </a>

            <a asp-action="PatientLogin" asp-controller="Patient" class="btn c-btn btn2 btn-danger w-100 text-white">
                Registered Patients
            </a>

            <a asp-action="AdminLogin" asp-controller="Admin" class="btn c-btn  mt-3 btn-success w-100 text-white">
                Admin / Physician Login
            </a>

        </div>
    </div>
</div>