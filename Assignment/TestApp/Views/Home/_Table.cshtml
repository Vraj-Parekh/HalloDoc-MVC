@model Pagination<UsersViewModel>

<table class="table">
    <thead class="table-light">
        <tr>
            <th class="col">
                User ID
            </th>
            <th class="col text-center">
                First Name
            </th>
            <th class="col text-center">
                Last Name
            </th>
            <th class="col text-center">
                Email
            </th>
            <th class="col text-center">
                Age
            </th>
            <th class="col text-center">
                Phone Number
            </th>
            <th class="col text-center">
                Gender
            </th>
            <th class="col text-center">
                City
            </th>
            <th class="col text-center">
                Country
            </th>
            <th class="col text-center">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    @item.UserId
                </td>
                <td class="text-center">
                    @item.FirstName
                </td>
                <td class="text-center">
                    @item.LastName
                </td>
                <td class="text-center">
                    @item.Email
                </td>
                <td class="text-center">
                    @item.Age
                </td>
                <td class="text-center">
                    @item.PhoneNumber
                </td>
                <td class="text-center">
                    @item.Gender
                </td>
                <td class="text-center">
                    @item.City
                </td>
                <td class="text-center">
                    @item.Country
                </td>
                <td class="text-center">
                    <button class="btn btn-outline-info" onclick="openEditUserModal(@item.UserId)">Edit</button>

                    <button class="btn btn-outline-info" data-bs-target="#deleteModal_@item.UserId" data-bs-toggle="modal" data-item-id="@item.UserId">Delete</button>

                    <div class="modal fade" id="deleteModal_@item.UserId" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class=" p-2 py-3 modal-content text-center justify-content-center">
                                <div class="modal-body px-5 pt-5 text-center">
                                    <form method="post" asp-action="DeleteUser" asp-controller="Home" asp-route-userId="@item.UserId">
                                        <div class="warning_icon" style="color:#f7ad00;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="85" height="85" fill="currentColor" class="bi bi-exclamation-circle-fill war-i" viewBox="0 0 16 16">
                                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4m.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2"></path>
                                            </svg>
                                        </div>
                                        <h4 class="text-center pt-3">Confirmation for deleting the user</h4>
                                        <p class="text-center fs-7 pt-2 text-secondary">
                                            Are sure you want to delete this user ?
                                        </p>
                                        <button type="submit" class="mb-3 btn btn-dark text-white" data-bs-dismiss="modal">Delete</button>
                                        <button type="button" class="mb-3 btn btn-outline-dark text-dark bg-white ms-2" data-bs-dismiss="modal">Cancel</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Pagination" />