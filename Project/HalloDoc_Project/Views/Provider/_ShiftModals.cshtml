@*Add Shift*@

<div class="modal fade" id="createShiftModal" tabindex="-1" aria-labelledby="createShiftModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header bg-info" data-bs-theme="dark">
                <h1 class="modal-title fs-5 text-white" id="exampleModalLabel">Create Shift</h1>
                <button type="button" class="btn-close opacity-100" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="d-flex flex-column justify-content-center">
                    <div class="form-floating mb-3">
                        <select class="form-select pt-0 pb-0 regionDropDown" id="floatingSelect" name="phyRegion" required>
                            <option selected disabled>Region</option>
                            <!-- Add options here -->
                        </select>
                        <span id="addShiftRegionError" class="text-danger"></span>
                    </div>

                    <!-- Add id and required attribute for validation -->
                    <div class="form-floating mb-3">
                        <select class="form-select pt-0 pb-0 physicianDropDown" id="p-id" aria-label="Floating label select example" name="phyId" required>
                            <option selected disabled>Physician</option>
                            <!-- Add options here -->
                        </select>
                        <span id="addShiftPhysicianError" class="text-danger"></span>
                    </div>

                    <!-- Add id and required attribute for validation -->
                    <div class="col-md-12 form-floating mb-3">
                        <input id="StartDate" class="form-control rounded vcs" name="Startdate" type="date" required>
                        <label for="Startdate">Starting Date</label>
                    </div>

                    <!-- Add id and required attribute for validation -->
                    <div class="row justify-content-between">
                        <div class="col-md-6 form-floating mb-3">
                            <div class="form-floating mb-3">
                                <input type="time" class="form-control" id="StartTime" placeholder=" " required>
                                <label for="StartTime">Start</label>
                                <span id="startTimeError" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6 form-floating mb-3">
                            <div class="form-floating mb-3">
                                <input type="time" class="form-control" id="EndTime" placeholder=" " required>
                                <label for="EndTime">End</label>
                                <span id="endTimeError" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Add id attribute for validation -->
                    <div class="col-lg-6">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                            <label class="form-check-label" for="flexSwitchCheckChecked">Repeat</label>
                        </div>
                    </div>
                    <div class="col-lg-12" id="repeat_days_block">
                        <!-- Add id attribute for validation -->
                        <!-- Repeat Day Checkboxes -->
                    </div>
                    <div class="col-md-12 form-floating  my-2">
                        <select class="form-select form-select-sm" id="RepeatUpto" required>
                            <option selected disabled>Repeat End</option>
                            <option>2-times</option>
                            <!-- Add more options if needed -->
                        </select>
                        <label for="RepeatUpto" class="form-label">Repeat End</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-info text-white" id="ConfirmAssign">Save</button>
                <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
