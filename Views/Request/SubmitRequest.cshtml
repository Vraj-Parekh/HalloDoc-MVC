@{
    ViewData["Title"] = "Submit Request Screen";
}
@section style {
    <link rel="stylesheet" href="~/css/submit_request.css" asp-append-version="true" />
}

<div class="container">
    <div class="d-flex justify-content-end">
        <a asp-action="PatientLogin" asp-controller="Patient">
            <button type="button" class="btn btn-outline-info mt-4" id="back_btn">
                < Back
            </button>
        </a>
    </div>

    <h1 class="d-flex justify-content-center mb-5">
        <strong>I am a...</strong>
    </h1>

    <div class="d-flex flex-column align-items-center">
        <div class="box mb-2" id="box1">
            <a asp-action="PatientInfo" asp-controller="Request">
                <h3>patient</h3>
            </a>
        </div>
        <div class="box mb-2" id="box2">
            <a asp-action="FamilyInfo" asp-controller="Request">
                <h3>family/friend</h3>
            </a>
        </div>
        <div class="box mb-2" id="box3">
            <a asp-action="ConciergeInfo" asp-controller="Request">
                <h3>concierge</h3>
            </a>
        </div>
        <div class="box mb-2" id="box4">
            <a asp-action="BusinessInfo" asp-controller="Request">
                <h3>business partners</h3>
            </a>
        </div>
    </div>
</div>